CREATE TABLE IF NOT EXISTS 'feeds' (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    description TEXT NOT NULL,
    link TEXT NOT NULL,
    rss TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS 'jobs' (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    link TEXT NOT NULL,
    posted_on INTEGER NOT NULL,
    feeds_id INTEGER NOT NULL,
    reposted BOOLEAN NOT NULL DEFAULT FALSE
);

CREATE TABLE IF NOT EXISTS 'db_patch_history' (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    patch_name TEXT NOT NULL,
    applied_on INTEGER NOT NULL
);

CREATE UNIQUE INDEX db_patch_history_patch_name_index ON db_patch_history (patch_name);
